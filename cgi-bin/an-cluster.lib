use strict;
use warnings;
use IO::Handle;
use Net::SSH2;

# Email stuff
use Email::Sender::Simple qw(sendmail);
use Email::Sender::Transport::SMTP::TLS;
use Try::Tiny;
use Email::Simple::Creator;

# Setup for UTF-8 mode.
binmode STDOUT, ":utf8:";
$ENV{'PERL_UNICODE'}=1;
my $THIS_FILE = "an-cluster.lib";
our $VERSION  = "1.0.4";

# This sanity-checks an.conf values before saving.
sub sanity_check_an_conf
{
	my ($conf, $sections) = @_;
	
	my $save       = 1;
	my $delete_ids = "";
	print "
<table align=\"center\">
	<tr>
		<td colspan=\"2\">
			<b>Saving Changes...</b>
		</td>
	</tr>
	<tr>
		<td class=\"highlight_good\">
			Validating
		</td>
		<td style=\"text-align: left;\">
			Making sure things look ok.
		</td>
	</tr>
";
	# Make sure email addresses are.
	if (($conf->{cgi}{smtp__username}) && ($conf->{cgi}{smtp__username} !~ /^\w[\w\.\-]*\w\@\w[\w\.\-]*\w(\.\w+)$/))
	{
		$save = 0;
		print "
	<tr>
		<td class=\"highlight_warning\">
			Mail Server User
		</td>
		<td style=\"text-align: left;\">
			The email address: [<span class=\"highlight_detail\">$conf->{cgi}{smtp__username}</span>] does not appear to be valid.
		</td>
	</tr>
";
	}
	if ($conf->{cgi}{mail_data__to})
	{
		foreach my $email (split /,/, $conf->{cgi}{mail_data__to})
		{
			next if not $email;
			if ($email !~ /^\w[\w\.\-]*\w\@\w[\w\.\-]*\w(\.\w+)$/)
			{
				$save = 0;
				print "
	<tr>
		<td class=\"highlight_warning\">
			Alert Recipient
		</td>
		<td style=\"text-align: left;\">
			The email address: [<span class=\"highlight_detail\">$email</span>] does not appear to be valid.
		</td>
	</tr>
";
			}
		}
	}
	
	# Make sure values that should be numerical are.
	if ($conf->{cgi}{smtp__port})
	{
		$conf->{cgi}{smtp__port} =~ s/,//;
		if (($conf->{cgi}{smtp__port} =~ /\D/) || ($conf->{cgi}{smtp__port} < 1) || ($conf->{cgi}{smtp__port} > 65535))
		{
			$save = 0;
			print "
	<tr>
		<td class=\"highlight_warning\">
			Mail Server Port
		</td>
		<td style=\"text-align: left;\">
			The mail server port needs to be a number between '<span class=\"highlight_detail\">1</span>' and '<span class=\"highlight_detail\">65535</span>'.
		</td>
	</tr>
";
		}
	}
	elsif ($conf->{cgi}{smtp__server})
	{
		$save = 0;
		print "
	<tr>
		<td class=\"highlight_warning\">
			Mail Server Port
		</td>
		<td style=\"text-align: left;\">
			You need to specify what TCP your mail server is listening on.<br />
			Usually this is either '<span class=\"highlight_detail\">25</span>' or '<span class=\"highlight_detail\">587</span>'.
		</td>
	</tr>
";
	}
	if ($conf->{cgi}{smtp__timeout})
	{
		$conf->{cgi}{smtp__timeout} =~ s/,//g;
		$conf->{cgi}{smtp__timeout} =~ s/\s//g;
		if ($conf->{cgi}{smtp__timeout} =~ /\D/)
		{
			$save = 0;
			print "
	<tr>
		<td class=\"highlight_warning\">
			Mail Server Timeout
		</td>
		<td style=\"text-align: left;\">
			The timeout your specified: [<span class=\"highlight_detail\">$conf->{cgi}{smtp__timeout}</span>] appears to have a mistake.<br />
			It needs to be a number of seconds. The default is '<span class=\"highlight_detail\">60</span>' seconds.
		</td>
	</tr>
";
		}
	}
	else
	{
		$conf->{cgi}{smtp__port} = 60;
	}

=pod
	# Now validate Anvil! entries.
	foreach my $this_id (split/,/, $conf->{cgi}{ids})
	{
		next if not $this_id;
		my $name_key         = "cluster__${this_id}__name";
		my $description_key  = "cluster__${this_id}__description";
		my $url_key          = "cluster__${this_id}__url";
		my $company_key      = "cluster__${this_id}__company";
		my $ricci_pw_key     = "cluster__${this_id}__ricci_pw";
		my $root_pw_key      = "cluster__${this_id}__root_pw";
		my $nodes_1_name_key = "cluster__${this_id}__nodes_1_name";
		my $nodes_1_ip_key   = "cluster__${this_id}__nodes_1_ip";
		my $nodes_1_port_key = "cluster__${this_id}__nodes_1_port";
		my $nodes_2_name_key = "cluster__${this_id}__nodes_2_name";
		my $nodes_2_ip_key   = "cluster__${this_id}__nodes_2_ip";
		my $nodes_2_port_key = "cluster__${this_id}__nodes_2_port";
		
		my $this_name         =  $conf->{cgi}{$name_key};
		my $this_description  =  $conf->{cgi}{$description_key};
		my $this_url          =  $conf->{cgi}{$url_key};
		my $this_company      =  $conf->{cgi}{$company_key};
		my $this_ricci_pw     =  $conf->{cgi}{$ricci_pw_key};
		my $this_root_pw      =  $conf->{cgi}{$root_pw_key};
		my $this_nodes_1_name =  $conf->{cgi}{$nodes_1_name_key};
		my $this_nodes_1_ip   =  $conf->{cgi}{$nodes_1_ip_key};
		my $this_nodes_1_port =  $conf->{cgi}{$nodes_1_port_key};
			$this_nodes_1_port =~ s/,//;
		my $this_nodes_2_name =  $conf->{cgi}{$nodes_2_name_key};
		my $this_nodes_2_ip   =  $conf->{cgi}{$nodes_2_ip_key};
		my $this_nodes_2_port =  $conf->{cgi}{$nodes_2_port_key};
			$this_nodes_2_port =~ s/,//;
			
		# Add the passed in port and IP (if exists) into the hashed
		# created in read_hosts() and read_ssh_config;
		if (($this_nodes_1_name) && ($this_nodes_1_ip))
		{
			$conf->{hosts}{$this_nodes_1_name}{ip} = $this_nodes_1_ip;
			if (not exists $conf->{hosts}{by_ip}{$this_nodes_1_ip})
			{
				$conf->{hosts}{by_ip}{$this_nodes_1_ip} = "";
			}
			$conf->{hosts}{by_ip}{$this_nodes_1_ip} .= "$this_nodes_1_name,";
		}
		if (($this_nodes_2_name) && ($this_nodes_2_ip))
		{
			$conf->{hosts}{$this_nodes_2_name}{ip} = $this_nodes_2_ip;
			if (not exists $conf->{hosts}{by_ip}{$this_nodes_2_ip})
			{
				$conf->{hosts}{by_ip}{$this_nodes_2_ip} = "";
			}
			$conf->{hosts}{by_ip}{$this_nodes_2_ip} .= "$this_nodes_2_name,";
		}
		if (($this_nodes_1_name) && ($this_nodes_1_port))
		{
			$conf->{hosts}{$this_nodes_1_name}{port} = $this_nodes_1_port;
		}
		if (($this_nodes_2_name) && ($this_nodes_2_port))
		{
			$conf->{hosts}{$this_nodes_2_name}{port} = $this_nodes_2_port;
		}
		
		# If everything is empty, that's fine.
		if ((not $this_name) && 
			(not $this_description) && 
			(not $this_url) && 
			(not $this_company) && 
			(not $this_ricci_pw) && 
			(not $this_root_pw) && 
			(not $this_nodes_1_name) && 
			(not $this_nodes_1_ip) && 
			(not $this_nodes_1_port) && 
			(not $this_nodes_2_name) && 
			(not $this_nodes_2_ip) && 
			(not $this_nodes_2_port))
		{
			next if $this_id eq "new";
			# Using the values found in the existing config
			# as these values do not exist in the CGI 
			# variables.
			$delete_ids .= "$this_id,";
			my ($nodes_1_name, $nodes_2_name) = ($conf->{cluster}{$this_id}{name} =~ /(.*?),(.*)/);
			$nodes_1_name =~ s/^\s+//;
			$nodes_1_name =~ s/\s+$//;
			$nodes_2_name =~ s/^\s+//;
			$nodes_2_name =~ s/\s+$//;
			record($conf, "$THIS_FILE ".__LINE__."; Deleting Anvil!: [$conf->{cluster}{$this_id}{name}], company: [$conf->{cluster}{$this_id}{company} ($conf->{cluster}{$this_id}{description})], node 1: [$nodes_1_name], node 2: [$nodes_2_name]\n");
			
			# Delete this from hosts and ssh_config
			delete $conf->{hosts}{$nodes_1_name};
			delete $conf->{hosts}{$nodes_2_name};
			foreach my $this_ip (keys %{$conf->{hosts}{by_ip}})
			{
				$conf->{hosts}{by_ip}{$this_ip} =~ "$nodes_1_name,";
				$conf->{hosts}{by_ip}{$this_ip} =~ "$nodes_2_name,";
				if (not $conf->{hosts}{by_ip}{$this_ip})
				{
					delete $conf->{hosts}{by_ip}{$this_ip};
				}
			}
			delete $conf->{hosts}{$nodes_1_name};
			delete $conf->{hosts}{$nodes_2_name};
		}
		else
		{
			# Something is defined, make sure it's sane.
			if ((not $this_name) || (not $this_nodes_1_name) || (not $this_nodes_2_name))
			{
				$save = 0;
				print "
	<tr>
		<td class=\"highlight_warning\">
			Anvil! Data Incomplete
		</td>
		<td style=\"text-align: left;\">
			The <i>Anvil!</i> with ID: [<span class=\"highlight_note\" class=\"fixed_width\">$this_id</span>] is missing some data.<br />
			At minimum, the '<span class=\"highlight_ready\">Anvil! Name</span>', '<span class=\"highlight_ready\">Node 1 Name</span> and '<span class=\"highlight_ready\">Node 2 Name</span>' must be specified.
		</td>
	</tr>
";
			}
			else
			{
				# The minimum information is present,
				# now make sure the set values are
				# sane.
				# IPs sane?
				if (($this_nodes_1_ip) && ($this_nodes_1_ip !~ /^(\d+)\.(\d+)\.(\d+)\.(\d+)$/))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Node 1 IP Address
		</td>
		<td style=\"text-align: left;\">
			The IP address assigned to <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>]'s node named: [<span class=\"highlight_detail\">$this_nodes_1_name</span>] appears to be invalid.<br />
		</td>
	</tr>
";
				}
				if (($this_nodes_2_ip) && ($this_nodes_2_ip !~ /^(\d+)\.(\d+)\.(\d+)\.(\d+)$/))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Node 2 IP Address
		</td>
		<td style=\"text-align: left;\">
			The IP address assigned to <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>]'s node named: [<span class=\"highlight_detail\">$this_nodes_1_name</span>] appears to be invalid.<br />
		</td>
	</tr>
";
				}
				# Ports sane?
				if (($this_nodes_1_port) && (($this_nodes_1_port =~ /\D/) || ($this_nodes_1_port < 1) || ($this_nodes_1_port > 65535)))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Node 1 TCP Port
		</td>
		<td style=\"text-align: left;\">
			The TCP port assigned to <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>]'s node named: [<span class=\"highlight_detail\">$this_nodes_1_name</span>] appears to be invalid.<br />
			A TCP port needs to be a number between '<span class=\"highlight_detail\">1</span>' and '<span class=\"highlight_detail\">65535</span>'.
		</td>
	</tr>
";
				}
				if (($this_nodes_2_port) && (($this_nodes_2_port =~ /\D/) || ($this_nodes_2_port < 1) || ($this_nodes_2_port > 65535)))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Node 2 TCP Port
		</td>
		<td style=\"text-align: left;\">
			The TCP port assigned to <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>]'s node named: [<span class=\"highlight_detail\">$this_nodes_2_name</span>] appears to be invalid.<br />
			A TCP port needs to be a number between '<span class=\"highlight_detail\">2</span>' and '<span class=\"highlight_detail\">65535</span>'.
		</td>
	</tr>
";
				}
				# If there is an IP or Port, but no 
				# node name, well that's just not good.
				if ((not $this_nodes_1_name) && (($this_nodes_1_ip) || ($this_nodes_1_port)))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Missing Node Name
		</td>
		<td style=\"text-align: left;\">
			Node 1 in <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>] appears to be missing.
		</td>
	</tr>
";
				}
				if ((not $this_nodes_2_name) && (($this_nodes_2_ip) || ($this_nodes_2_port)))
				{
					$save = 0;
					print "
	<tr>
		<td class=\"highlight_warning\">
			Missing Node Name
		</td>
		<td style=\"text-align: left;\">
			Node 2 in <i>Anvil!</i>: [<span class=\"highlight_detail\">$this_name</span>] appears to be missing.
		</td>
	</tr>
";
				}
			}
		}
	}
=cut
	return ($save, $delete_ids);
}

# This writes out the new an.conf file.
sub write_new_an_conf
{
	my ($conf, $say_date, $delete_ids) = @_;
	
	my $last_line_was_blank = 0;
	my $an_conf = IO::Handle->new();
	open ($an_conf, ">$conf->{path}{an_conf}") or die "$THIS_FILE ".__LINE__."; Can't write to: [$conf->{path}{an_conf}], error: $!\n";
	print $an_conf "### Last updated: [$say_date]\n";
	
	print "
	<tr>
		<td class=\"highlight_good\">
			Sanity Checks Passed!
		</td>
		<td style=\"text-align: left;\">
			Everything seems sensible, ready to save.
		</td>
	</tr>
";
	# Write out the 'an.conf' file.
	# If the sending domain or helo domain are 
	# 'example.com', make them the short version of the
	# sending email, if defined, or else the smtp server.
	if ($conf->{cgi}{mail_data__sending_domain} eq "example.com")
	{
		if ($conf->{cgi}{smtp__username} =~ /.*?\@(.*)/)
		{
			$conf->{cgi}{mail_data__sending_domain} = $1;
		}
		else
		{
			$conf->{cgi}{mail_data__sending_domain} =  $conf->{cgi}{smtp__server};
			$conf->{cgi}{mail_data__sending_domain} =~ s/^.*?\.(.*?\..*?)$/$1/;
		}
	}
	if ($conf->{cgi}{smtp__helo_domain} eq "example.com")
	{
		if ($conf->{cgi}{smtp__username} =~ /.*?\@(.*)/)
		{
			$conf->{cgi}{smtp__helo_domain} = $1;
		}
		else
		{
			$conf->{cgi}{smtp__helo_domain} =  $conf->{cgi}{smtp__server};
			$conf->{cgi}{smtp__helo_domain} =~ s/^.*?\.(.*?\..*?)$/$1/;
		}
	}
	
	my $delete_blank_line = 0;
	foreach my $line (@{$conf->{raw}{an_conf}})
	{
		#record($conf, "$THIS_FILE ".__LINE__."; >> an_conf line: [$line]\n");
		next if $line =~ /### Last updated/;
		$line =~ s/^(smtp::server\s*=\s*).*$/$1$conf->{cgi}{smtp__server}/;
		$line =~ s/^(smtp::port\s*=\s*).*$/$1$conf->{cgi}{smtp__port}/;
		$line =~ s/^(smtp::timeout\s*=\s*).*$/$1$conf->{cgi}{smtp__timeout}/;
		$line =~ s/^(smtp::username\s*=\s*).*$/$1$conf->{cgi}{smtp__username}/;
		$line =~ s/^(smtp::password\s*=\s*).*$/$1$conf->{cgi}{smtp__password}/;
		$line =~ s/^(smtp::security\s*=\s*).*$/$1$conf->{cgi}{smtp__security}/;
		$line =~ s/^(smtp::encrypt_pass\s*=\s*).*$/$1$conf->{cgi}{smtp__encrypt_pass}/;
		$line =~ s/^(smtp::helo_domain\s*=\s*).*$/$1$conf->{cgi}{smtp__helo_domain}/;
		$line =~ s/^(mail_data::to\s*=\s*).*$/$1$conf->{cgi}{mail_data__to}/;
		$line =~ s/^(mail_data::sending_domain\s*=\s*).*$/$1$conf->{cgi}{mail_data__sending_domain}/;
		
		if ($line =~ /^cluster::(.*?)::(.*?)\s*=/)
		{
			my $this_id       = $1;
			my $this_variable = $2;
			if ($delete_ids =~ /$this_id,/)
			{
				# I need to delete a blank line
				# to keep the config from 
				# having odd spaces when 
				# configs are deleted.
				$delete_blank_line = 1;
				next;
			}
			else
			{
				# Handled '::nodes' properly
				if ($this_variable eq "nodes")
				{
					my $variable   = "cluster::${this_id}::nodes";
					my $node_1_key = "cluster__${this_id}__nodes_1_name";
					my $node_2_key = "cluster__${this_id}__nodes_2_name";
					$line =~ s/^($variable\s*=\s*).*$/$1$conf->{cgi}{$node_1_key}, $conf->{cgi}{$node_2_key}/;
				}
				else
				{
					my $variable = "cluster::${this_id}::${this_variable}";
					my $key      = "cluster__${this_id}__${this_variable}";
					$line =~ s/^($variable\s*=\s*).*$/$1$conf->{cgi}{$key}/;
				}
			}
		}
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [$line]\n");
		if ($line =~ /^\s*$/)
		{
			if (not $last_line_was_blank)
			{
				print $an_conf "$line\n";
			}
			$last_line_was_blank = 1;
		}
		else
		{
			$last_line_was_blank = 0;
			print $an_conf "$line\n";
		}
	}
	# If 'new' has a cluster name, add it.
	if ($conf->{cgi}{cluster__new__name})
	{
		# Find the first free ID.
		my $new_id = 1;
		foreach my $this_id (sort {$a cmp $b} split/,/, $conf->{cgi}{ids})
		{
			if ($this_id == $new_id)
			{
				$new_id++;
			}
			else
			{
				last;
			}
		}
		# I need an updated 'ids' cgi for the 'hosts' and 'ssh_config'
		# sections.
		record($conf, "$THIS_FILE ".__LINE__."; >> cgi::ids: [$conf->{cgi}{ids}], new_id: [$new_id]\n");
		$conf->{cgi}{ids} .= ",$new_id";
		$conf->{cgi}{ids} =~ s/new//;
		$conf->{cgi}{ids} =~ s/,,/,/;
		record($conf, "$THIS_FILE ".__LINE__."; << cgi::ids: [$conf->{cgi}{ids}]\n");
		
		my $name_key         = "cluster__${new_id}__name";
		my $nodes_key        = "cluster__${new_id}__nodes";
		my $nodes_1_name_key = "cluster__${new_id}__nodes_1_name";
		my $nodes_2_name_key = "cluster__${new_id}__nodes_2_name";
		my $company_key      = "cluster__${new_id}__company";
		my $description_key  = "cluster__${new_id}__description";
		my $url_key          = "cluster__${new_id}__url";
		my $ricci_pw_key     = "cluster__${new_id}__ricci_pw";
		my $root_pw_key      = "cluster__${new_id}__root_pw";
		$conf->{cgi}{$name_key}        = $conf->{cgi}{cluster__new__name};
		$conf->{cgi}{$nodes_key}       = "$conf->{cgi}{cluster__new__nodes_1_name}, $conf->{cgi}{cluster__new__nodes_2_name}";
		$conf->{cgi}{$company_key}     = $conf->{cgi}{cluster__new__company};
		$conf->{cgi}{$description_key} = $conf->{cgi}{cluster__new__description};
		$conf->{cgi}{$url_key}         = $conf->{cgi}{cluster__new__url};
		$conf->{cgi}{$ricci_pw_key}    = $conf->{cgi}{cluster__new__ricci_pw};
		$conf->{cgi}{$root_pw_key}     = $conf->{cgi}{cluster__new__root_pw};
		$conf->{cgi}{clusters__new__name}        = "";
		$conf->{cgi}{clusters__new__nodes}       = "";
		$conf->{cgi}{clusters__new__company}     = "";
		$conf->{cgi}{clusters__new__description} = "";
		$conf->{cgi}{clusters__new__url}         = "";
		$conf->{cgi}{clusters__new__ricci_pw}    = "";
		$conf->{cgi}{clusters__new__root_pw}     = "";
		
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [cluster::${new_id}::name\t\t=\t$conf->{cgi}{$name_key}]\n");
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [cluster::${new_id}::nodes\t\t=\t$conf->{cgi}{$nodes_key}]\n");
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [cluster::${new_id}::company\t\t=\t$conf->{cgi}{$company_key}]\n");
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [cluster::${new_id}::description\t\t=\t$conf->{cgi}{$description_key}]\n");
		#record($conf, "$THIS_FILE ".__LINE__."; an_conf line: [cluster::${new_id}::url\t\t\t=\t$conf->{cgi}{$url_key}]\n");
