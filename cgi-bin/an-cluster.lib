# This reads in /etc/hosts and later will try to match host names to IPs
sub read_hosts
{
	my ($conf) = @_;
	#record($conf, "$THIS_FILE ".__LINE__."; read_hosts()\n");
	
	$conf->{raw}{hosts} = [];
	my $fh = IO::Handle->new();
	my $sc = "$conf->{path}{hosts}";
	open ($fh, "<$sc") or die "$THIS_FILE ".__LINE__."; Failed to read: [$sc], error was: $!\n";
	while (<$fh>)
	{
		chomp;
		my $line = $_;
		push @{$conf->{raw}{hosts}}, $line;
		$line =~ s/#.*$//;
		$line =~ s/\s+$//;
		next if not $line;
		next if $line =~ /^127.0.0.1\s/;
		next if $line =~ /^::1\s/;
		#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
		
		my ($this_ip, $these_hosts);
		if ($line =~ /^(\d+\.\d+\.\d+\.\d+)\s+(.*)/)
		{
			$this_ip     = $1;
			$these_hosts = $2;
			foreach my $this_host (split/ /, $these_hosts)
			{
				$conf->{hosts}{$this_host}{ip} = $this_ip;
				if (not exists $conf->{hosts}{by_ip}{$this_ip})
				{
					$conf->{hosts}{by_ip}{$this_ip} = "";
				}
				$conf->{hosts}{by_ip}{$this_ip} .= "$this_host,";
				#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host] -> this_ip: [$conf->{hosts}{$this_host}{ip}] ($conf->{hosts}{by_ip}{$this_ip})\n");
			}
		}
	}
	$fh->close();
	
	return(0);
}

# This reads /etc/ssh/ssh_config and later will try to match host names to
# port forwards.
sub read_ssh_config
{
	my ($conf) = @_;
	#record($conf, "$THIS_FILE ".__LINE__."; read_ssh_config()\n");
	
	$conf->{raw}{ssh_config} = [];
	my $this_host;
	my $fh = IO::Handle->new();
	my $sc = "/etc/ssh/ssh_config";
	open ($fh, "<$sc") or die "$THIS_FILE ".__LINE__."; Failed to read: [$sc], error was: $!\n";
	while (<$fh>)
	{
		chomp;
		my $line = $_;
		push @{$conf->{raw}{ssh_config}}, $line;
		$line =~ s/#.*$//;
		$line =~ s/\s+$//;
		next if not $line;
		#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
		
		if ($line =~ /^host (.*)/i)
		{
			$this_host = $1;
			next;
		}
		next if not $this_host;
		if ($line =~ /port (\d+)/i)
		{
			my $port = $1;
			$conf->{hosts}{$this_host}{port} = $port;
			#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host] -> port: [$conf->{hosts}{$this_host}{port}]\n");
		}
	}
	$fh->close();
	
	return(0);
}

# This copies a file from one place to another.
sub copy_file
{
	my ($conf, $source, $destination) = @_;
	record($conf, "$THIS_FILE ".__LINE__."; copy_file(); source: [$source], destination: [$destination]\n");
	
	my $output = "";
	my $sc     = "$conf->{path}{cp} -f $source $destination";
	#record($conf, "$THIS_FILE ".__LINE__."; Calling: [$sc]\n");
	my $fh = IO::Handle->new();
	open ($fh, "$sc 2>&1 |") or die "$THIS_FILE ".__LINE__."; Failed to call: [$sc]\n";
	while(<$fh>)
	{
		chomp;
		my $line = $_;
		$output .= "$line\n";
		record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
	}
	$fh->close();
	
	if (not -e $destination)
	{
		$output =~ s/\n$//;
		my $message =  "Failed to copy the file: [<span class=\"highlight_detail\">$source</span>] to: [<span class=\"highlight_detail\">$destination</span>].<br />\n";
		   $message .= "Shell call output:<br />\n";
		   $message .= "<hr />\n";
		   $message .= "<span class=\"highlight_detail\">$output</span>";
		   $message .= "<hr />\n";
		error($conf, $message, 1);
	}
	
	return(0);
}

sub write_new_ssh_config
{
	my ($conf, $say_date, $delete_ids) = @_;
	record($conf, "$THIS_FILE ".__LINE__."; write_new_hosts(); say_date: [$say_date], delete_ids: [$delete_ids]\n");
	
	my $ssh_config = IO::Handle->new();
	open ($ssh_config, ">$conf->{path}{ssh_config}") or die "$THIS_FILE ".__LINE__."; Can't write to: [$conf->{path}{ssh_config}], error: $!\n";
	#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [### Last updated: [$say_date]]\n");
	print $ssh_config "### Last updated: [$say_date]\n";
	
	my $last_time_blank = 0;
	my $next_port       = "";
	foreach my $line (@{$conf->{raw}{ssh_config}})
	{
		next if $line =~ /### Last updated:/;
		#record($conf, "$THIS_FILE ".__LINE__."; >> ssh_config line: [$line]\n");
		if ($line =~ /^Host\s+(.*)$/)
		{
			my $this_host = $1;
			#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host]\n");
			
			# See if this host has been deleted.
			my $delete = 0;
			foreach my $this_id (split/,/, $delete_ids)
			{
				next if not $this_id;
				#record($conf, "$THIS_FILE ".__LINE__."; this_id: [$this_id], cluster::${this_id}::name: [$conf->{cluster}{$this_id}{name}]\n");
				my ($nodes_1_name, $nodes_2_name) = ($conf->{cluster}{$this_id}{nodes} =~ /(.*?),(.*)/);
				$nodes_1_name =~ s/^\s+//;
				$nodes_1_name =~ s/\s+$//;
				$nodes_2_name =~ s/^\s+//;
				$nodes_2_name =~ s/\s+$//;
				#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host], deleted node 1: [$nodes_1_name], node 2: [$nodes_2_name]\n");
				if (($this_host eq $nodes_1_name) || ($this_host eq $nodes_2_name))
				{
					$delete = 1;
					#record($conf, "$THIS_FILE ".__LINE__."; delete: [$delete]\n");
				}
			}
			
			#record($conf, "$THIS_FILE ".__LINE__."; delete: [$delete]\n");
			if ($delete)
			{
				$next_port = "delete";
				#record($conf, "$THIS_FILE ".__LINE__."; next_port: [$next_port]\n");
				delete $conf->{hosts}{$this_host};
			}
			elsif ($conf->{hosts}{$this_host}{port})
			{
				$next_port = $conf->{hosts}{$this_host}{port};
				#record($conf, "$THIS_FILE ".__LINE__."; next_port: [$next_port]\n");
				
				print $ssh_config "$line\n";
				#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [$line]\n");
				
				# Delete it so I don't append it later.
				delete $conf->{hosts}{$this_host};
			}
		}
		elsif ($line =~ /^\s*Port\s/)
		{
			#record($conf, "$THIS_FILE ".__LINE__."; next_port: [$next_port]\n");
			if ($next_port)
			{
				# If this is a deleted one, bail out.
				if ($next_port eq "delete")
				{
					#record($conf, "$THIS_FILE ".__LINE__."; Deleted node.\n");
					$next_port = "";
				}
				else
				{
					print $ssh_config "\tPort $next_port\n\n";
					#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [\tPort $next_port]\n");
					$next_port = "";
				}
			}
			else
			{
				# Not one of ours.
				if ($line =~ /^\s*$/)
				{
					if ($last_time_blank)
					{
						next;
					}
					else
					{
						$last_time_blank = 1;
					}
				}
				else
				{
					$last_time_blank = 0;
				}
				print $ssh_config "$line\n";
				#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [$line]\n");
			}
		}
		else
		{
			# Normal line
			if ($line =~ /^\s*$/)
			{
				if ($last_time_blank)
				{
					next;
				}
				else
				{
					$last_time_blank = 1;
				}
			}
			else
			{
				$last_time_blank = 0;
			}
			print $ssh_config "$line\n";
			#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [$line]\n");
		}
	}
	
	# Now add any new entries.
	foreach my $this_host (sort {$a cmp $b} keys %{$conf->{hosts}})
	{
		#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host], port: [$conf->{hosts}{$this_host}{port}]\n");
		next if not $conf->{hosts}{$this_host}{port};
		print $ssh_config "Host $this_host\n\tPort $conf->{hosts}{$this_host}{port}\n\n";
		#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [Host $this_host]\n");
		#record($conf, "$THIS_FILE ".__LINE__."; << ssh_config line: [\tPort $conf->{hosts}{$this_host}{port}]\n");
	}
	$ssh_config->close();

	return(0);
}

# Write out the new 'hosts' file. This is simple and doesn't preserve comments
# or formatting. It will preserve non-node related IPs.
sub write_new_hosts
{
	my ($conf, $say_date, $delete_ids) = @_;
	record($conf, "$THIS_FILE ".__LINE__."; write_new_hosts(); say_date: [$say_date], delete_ids: [$delete_ids]\n");
	
	# Open the file
	my $hosts = IO::Handle->new();
	open ($hosts, ">$conf->{path}{hosts}") or die "$THIS_FILE ".__LINE__."; Can't write to: [$conf->{path}{hosts}], error: $!\n";
	print $hosts "### Last updated: [$say_date]
# The file is maintained by AN!CDB. If you modify this manually, entries will
# be preserved but formatting will not.

127.0.0.1	localhost localhost.localdomain localhost4 localhost4.localdomain4
::1		localhost localhost.localdomain localhost6 localhost6.localdomain6

";
	# Cycle through the passed variables and add them to the hashed created
	# when the hosts file was last read.
	#record($conf, "$THIS_FILE ".__LINE__."; cgi::ids: [$conf->{cgi}{ids}]\n");
	my $printed_ips = "";
	foreach my $this_id (split/,/, $conf->{cgi}{ids})
	{
		#record($conf, "$THIS_FILE ".__LINE__."; this_id: [$this_id]\n");
		my $node_1_name_key = "cluster__${this_id}__nodes_1_name";
		my $node_1_ip_key   = "cluster__${this_id}__nodes_1_ip";
		my $node_2_name_key = "cluster__${this_id}__nodes_2_name";
		my $node_2_ip_key   = "cluster__${this_id}__nodes_2_ip";
		
		foreach my $this_ip (sort {$a cmp $b} keys %{$conf->{hosts}{by_ip}})
		{
			if (not exists $conf->{new_hosts}{$this_ip})
			{
				$conf->{new_hosts}{$this_ip} = "";
			}
 
			my $host = 0;
			#record($conf, "$THIS_FILE ".__LINE__."; hosts::by_ip::${this_ip}: [$conf->{hosts}{by_ip}{$this_ip}]\n");
			foreach my $this_host (sort {$a cmp $b} split/,/, $conf->{hosts}{by_ip}{$this_ip})
			{
				next if not $this_host;
				next if $conf->{new_hosts}{$this_ip} =~ /$this_host,/;
				$conf->{new_hosts}{$this_ip} .= "$this_host,";
				#record($conf, "$THIS_FILE ".__LINE__."; this_ip: [$this_ip] -> [$conf->{new_hosts}{$this_ip}]\n");
			}
		}
	}
	foreach my $this_ip (sort {$a cmp $b} keys %{$conf->{new_hosts}})
	{
		next if not $this_ip;
		my $line = "$this_ip\t";
		foreach my $this_host (sort {$a cmp $b} split/,/, $conf->{new_hosts}{$this_ip})
		{
			# See if this host has been deleted.
			my $delete = 0;
			foreach my $this_id (split/,/, $delete_ids)
			{
				next if not $this_id;
				#record($conf, "$THIS_FILE ".__LINE__."; this_id: [$this_id], cluster::${this_id}::name: [$conf->{cluster}{$this_id}{name}]\n");
				my ($nodes_1_name, $nodes_2_name) = ($conf->{cluster}{$this_id}{nodes} =~ /(.*?),(.*)/);
				$nodes_1_name =~ s/^\s+//;
				$nodes_1_name =~ s/\s+$//;
				$nodes_2_name =~ s/^\s+//;
				$nodes_2_name =~ s/\s+$//;
				#record($conf, "$THIS_FILE ".__LINE__."; this_host: [$this_host], deleted node 1: [$nodes_1_name], node 2: [$nodes_2_name]\n");
				if (($this_host eq $nodes_1_name) || ($this_host eq $nodes_2_name))
				{
					$delete = 1;
					#record($conf, "$THIS_FILE ".__LINE__."; delete: [$delete]\n");
				}
			}
			
			#record($conf, "$THIS_FILE ".__LINE__."; delete: [$delete]\n");
			if (not $delete)
			{
				$line .= "$this_host ";
				#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
			}
		}
		# Make sure at least one host survived the delete check.
		#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
		if ($line =~ /^(\d+\.\d+\.\d+\.\d+)\s+$/)
		{
			my $this_ip = $1;
			#record($conf, "$THIS_FILE ".__LINE__."; The IP: [$this_ip] has not host names, skipping.\n");
		}
		else
		{
			$line =~ s/\s+$//;
			print $hosts "$line\n";
			#record($conf, "$THIS_FILE ".__LINE__."; hosts line: [$line]\n");
		}
	}
	$hosts->close();
	
	return(0);
}

