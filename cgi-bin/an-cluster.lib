		if ($line =~ /start: \/proc\/net\/bonding\/bond(\d+)/)
		{
			$this_bond = $1;
		}
		next if not $this_bond;
		#record($conf, "$THIS_FILE ".__LINE__."; this_bond: [$this_bond], line: [$line]\n");
