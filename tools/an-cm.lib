			next;
		}
		if ($line =~ /^(Relative State of Charge)\s*:\s*(.*)/i)
		{
			if ($in_bbu_fw_status)
			{
				# FW Status
				$conf->{translate}{lsi}{fw_status_relative_state_of_charge} = $1;
				$conf->{data}{lsi}{new}{adapter}{$adapter}{bbu}{fw_status_relative_state_of_charge} = $2;
