# Record a message to the log file.
sub record
{
	my ($conf, $message)=@_;

	my $fh = $conf->{handles}{'log'};
	if (not $fh)
	{
		$fh = IO::Handle->new();
		open ($fh, ">>$conf->{path}{'log'}") or die "Can't write to: [$conf->{path}{'log'}], error: $!\n";
		print $fh "======\nOpening AN!CM - Anvil! Monitor log at ".get_date($conf)."\n";
		$conf->{handles}{'log'} = $fh;
	}
	print $fh get_date($conf)." ".$message;
	#print time." ".$message;
	
	return (0);
}

# This sets the host name of this machine based on the output of `uname -n`
sub get_hostname
{
	my ($conf)=@_;
	
	my $fh = IO::Handle->new();
	my $sc = "$conf->{path}{uname} -n 2>&1 |";
	open ($fh, $sc) or die "Failed to call: [$sc], error: $!\n";
	while (<$fh>)
	{
		chomp;
		$conf->{node}{me}{short_name} = $_;
	}
	$fh->close();
	
	$conf->{node}{me}{long_name}  =  $conf->{node}{me}{short_name};
	$conf->{node}{me}{short_name} =~ s/\..*//;
	#record($conf, "$THIS_FILE ".__LINE__."; local host name: [$conf->{node}{me}{long_name}], short: [$conf->{node}{me}{short_name}]\n");
	
	return (0); 
}

# This causes the script to exit if another instance is already running.
sub avoid_duplicate_run
{
	my ($conf)=@_;
	
	my $my_pid     = $$;
	my $short_name =  $THIS_FILE;
	   $short_name =~ s/\..*//;
	#record($conf, "$THIS_FILE ".__LINE__."; Checking if $short_name is already running. I have pid: [$my_pid]...\n");
	my $fh = IO::Handle->new();
	my $sc = "$conf->{path}{pgrep} $short_name";
	open ($fh, "$sc 2>&1 |") or die "Failed to call: [$sc], error: $!\n";
	while (<$fh>)
	{
		chomp;
		my $line = $_;
		#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
		my $prog_name = $conf->{misc}{program_name};
		if ($line ne $my_pid)
		{
			my $ps_pid = $line;
			#record ($conf, "$THIS_FILE ".__LINE__."; Found another instance of $short_name with pid: [$ps_pid]. Exiting...\n");
			$fh->close();
			exit (1);
		}
	}
	$fh->close();
	
	return (0);
}

# This reads the cluster.conf file for information about this node and the
# cluster.
sub read_cluster_conf
{
	my ($conf) = @_;
	
	my $fh=IO::Handle->new();
	my $sc="$conf->{path}{cluster_conf}";
	open ($fh, "<$sc") or die "Failed to read: [$sc], error was: $!\n";
	while (<$fh>)
	{
		chomp;
		my $line = $_;
		next if not $line;
		#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
		if ($line =~ /<cluster .*?name="(.*?)"/)
		{
			$conf->{cluster}{name} = $1;
			#record($conf, "$THIS_FILE ".__LINE__."; cluster::name: [$conf->{cluster}{name}]\n");
			if ($conf->{cluster}{name} ne $conf->{this_cluster})
			{
				$conf->{this_cluster} = $conf->{cluster}{name};
				#record($conf, "$THIS_FILE ".__LINE__."; this_cluster: [$conf->{this_cluster}]\n");
			}
		}
		if ($line =~ /<clusternode.*name="(.*?)"/)
		{
			my $node = $1;
			push @{$conf->{cluster}{node}}, $node;
		}
	}
	$fh->close();
	
	return(0);
}

# This reads in the configuration file.
sub read_conf
{
	my ($conf) = @_;
	
	my $fh = IO::Handle->new();
	my $sc = "$conf->{path}{an_conf}";
	#print "sc: [$sc]\n";
	open ($fh, "<$sc") or die "Failed to read: [$sc], error was: $!\n";
	while (<$fh>)
	{
		chomp;
		my $line = $_;
		#print "line: [$line]\n";
		next if not $line;
		next if $line !~ /=/;
		$line =~ s/^\s+//;
		$line =~ s/\s+$//;
		next if $line =~ /^#/;
		next if not $line;
		my ($var, $val) = (split/=/, $line, 2);
		$var =~ s/^\s+//;
		$var =~ s/\s+$//;
		$val =~ s/^\s+//;
		$val =~ s/\s+$//;
		next if (not $var);
		#print "var: [$var], val: [$val]\n";
		_make_hash_reference($conf, $var, $val);
	}
	$fh->close();
	
	### Note: By default, 'this_cluster' is not specified in an.conf. The
	###       user should simply load their cluster.conf file.
	# If I still don't have 'this_cluster', look for 'cluster.conf'.
	if ((not $conf->{this_cluster}) && (-e "/etc/cluster/cluster.conf"))
	{
		my $fh=IO::Handle->new();
		my $sc="/etc/cluster/cluster.conf";
		#print "sc: [$sc]\n";
		open ($fh, "<$sc") or die "Failed to read: [$sc], error was: $!\n";
		while (<$fh>)
		{
			chomp;
			my $line = $_;
			#record($conf, "$THIS_FILE ".__LINE__."; line: [$line]\n");
			if ($line =~ /<cluster .*?name="(.*?)"/)
			{
				$conf->{this_cluster} = $1;
				#record($conf, "$THIS_FILE ".__LINE__."; this_cluster: [$conf->{this_cluster}]\n");
				last if $conf->{this_cluster};
			}
		}
		$fh->close();
	}
	
	# Here, I need to dig out the active cluster and push their variable 
	# values into base hash keys.
	#record($conf, "$THIS_FILE ".__LINE__."; this_cluster: [$conf->{this_cluster}]\n");
	if ($conf->{this_cluster})
	{
		foreach my $this_sequence (sort {$a cmp $b} keys %{$conf->{cluster}})
		{
			#record($conf, "$THIS_FILE ".__LINE__."; this_sequence: [$this_sequence]\n");
			if ($conf->{this_cluster} eq $conf->{cluster}{$this_sequence}{name})
			{
				# Found the matching cluster.
				$conf->{cluster}{company}     = $conf->{cluster}{$this_sequence}{company};
				$conf->{cluster}{description} = $conf->{cluster}{$this_sequence}{description};
				$conf->{cluster}{nodes}       = $conf->{cluster}{$this_sequence}{nodes};
				#record($conf, "$THIS_FILE ".__LINE__."; cluster::company: [$conf->{cluster}{company}], cluster::description: [$conf->{cluster}{description}], cluster::nodes: [$conf->{cluster}{nodes}]\n");
				
				# If the user specified any overrides, use them.
				foreach my $key (sort {$a cmp $b} keys %{$conf->{cluster}{$this_sequence}{smtp}})
				{
					if ($conf->{cluster}{$this_sequence}{smtp}{$key} ne "#!inherit!#")
					{
						record($conf, "$THIS_FILE ".__LINE__."; > smtp::${key}: [$conf->{smtp}{$key}], cluster::${this_sequence}::smtp::${key}: [$conf->{cluster}{$this_sequence}{smtp}{$key}]\n");
						$conf->{smtp}{$key} = $conf->{cluster}{$this_sequence}{smtp}{$key};
						record($conf, "$THIS_FILE ".__LINE__."; < smtp::${key}: [$conf->{smtp}{$key}]\n");
					}
				}
				foreach my $key (sort {$a cmp $b} keys %{$conf->{cluster}{$this_sequence}{mail_data}})
				{
					if ($conf->{cluster}{$this_sequence}{mail_data}{$key} ne "#!inherit!#")
					{
						record($conf, "$THIS_FILE ".__LINE__."; > mail_data::${key}: [$conf->{mail_data}{$key}], cluster::${this_sequence}::smtp::${key}: [$conf->{cluster}{$this_sequence}{mail_data}{$key}]\n");
						$conf->{mail_data}{$key} = $conf->{cluster}{$this_sequence}{mail_data}{$key};
						record($conf, "$THIS_FILE ".__LINE__."; < mail_data::${key}: [$conf->{mail_data}{$key}]\n");
					}
				}
				last;
			}
		}
	}
	
	return(0);
}

sub get_date
{
	my ($conf, $time) = @_;
	$time = time if not defined $time;
	
	my @time   = localtime($time);
	my $year   = ($time[5] + 1900);
	my $month  = sprintf("%.2d", ($time[4] + 1));
	my $day    = sprintf("%.2d", $time[3]);
	my $hour   = sprintf("%.2d", $time[2]);
	my $minute = sprintf("%.2d", $time[1]);
	my $second = sprintf("%.2d", $time[0]);
	
	# this returns "yyyy-mm-dd_hh:mm:ss".
	my $date = "$year-$month-$day $hour:$minute:$second";
	
	return ($date);
}

