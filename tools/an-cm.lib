			}
			elsif ($in_bbu_cap_info)
			{
				# Capacity Info
				$conf->{translate}{lsi}{cap_info_relative_state_of_charge} = $1;
				$conf->{data}{lsi}{new}{adapter}{$adapter}{bbu}{cap_info_relative_state_of_charge} = $2;
